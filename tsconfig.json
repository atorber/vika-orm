{
  "extends": "@chatie/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "outDir": "dist/esm",
    "ignoreDeprecations": "5.0",
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "tests/fixtures/",
    "tests/fixtures/smoke-testing.ts",
  ],
  "include": [
    "bin/*.ts",
    "examples/**/*.js",
    "examples/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.spec.ts", "tests/test.ts",
  ],
}
